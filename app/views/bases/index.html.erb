<% provide(:title, "拠点一覧") %>
<h1>拠点一覧</h1>

<div class="col-md-10 col-md-offset-1">
  <table class="table table-condensed table-hover" id="table-bases">
    <thead>
      <tr>
        <th></th>
        <th></th>
        <th>拠点番号</th>
        <th>拠点名</th>
        <th>勤怠種類</th>
      </tr>
      <% @bases.each do |base| %>
      <tr>
        <td><%= link_to "修正", edit_basis_path(base), remote: true, class: "btn btn-primary btn-base" %></td>
        <td><%= link_to "削除", base, method: :delete,
                data: { confirm: "削除してよろしいですか？" }, class: "btn btn-primary btn-base" %></td>
        <td><%= base.base_number %></td>
        <td><%= base.base_name %></td>
        <td><%= base.base_type %></td>
      </tr>
      <% end %>
      <tr>
        <td colspan="5"><%= link_to "拠点情報追加", new_basis_path, class: "btn btn-primary btn-base" %></td>
      </tr>
    </thead>
  </table>
</div>

<!--モーダルウインドウ-->
<div id="edit_basis" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>